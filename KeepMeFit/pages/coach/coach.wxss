/* pages/coach/coach.wxss */
.container{}
.coach-info{
  margin-bottom: 20px;
}
.coach-info image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 50rpx 0;
}
.coach-info text{
  font-size:15px;
  margin-bottom:16rpx;
  font-weight:bold;
  color:#353535;
}
.exit-btn{
  position: absolute;
  top: 40px;
  right: 20px;
  color:#982323;
  border:1px solid;
  padding:5px 8px;
  font-size:14px;
  border-radius:4px;
}
.courses-container{
  box-sizing:border-box;
  padding:0px 10px;
  color:#353535;
}
.courses-container .title{
  font-weight: bold;
  font-size: 20px;
  margin-bottom: 20rpx;
}
.icon{
  position: fixed;
  width:60rpx;
  height:60rpx;
  right:30px;
  bottom:30px;
  border:1px solid;
  border-radius:30px;
  padding:5px;
  opacity: 0.7;
}
.course-container{
  align-items:left;
  box-sizing:border-box;
  padding:5px 5px 5px 20px;
  box-shadow:0 8px 20px -10px;
  border-radius:3px;
  margin-bottom: 40rpx;
  background: #f7f7f7;
}
.course-container text{
  margin: 3rpx 0px;
}
.course-container text:first-child{
  font-weight: bold;
  margin-bottom: 10rpx;
}
.course-student-container{
  margin: 20rpx 0px;
}